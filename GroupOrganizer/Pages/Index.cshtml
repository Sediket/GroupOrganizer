@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>CSS Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
        }

        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        /* Style the top navigation bar */
        .topnav {
            overflow: hidden;
            background-color: #333;
        }


        .test {
        }


        .topnavContainer {
            display: block;
        }

        /* Style the topnav links */
        .topnav a {
            float: left;
            display: block;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        .topnav label {
            float: left;
            display: block;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        .topnav select, option {
            float: left;
            display: block;
            color: #f2f2f2;
            text-align: center;
            margin-top: 10px;
            padding: 5px 16px;
            text-decoration: none;
            background-color: #333;
        }

        /* Change color on hover */
        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        .item {
            float: left;
            dispaly: block;
            padding: 10px;
            margin: 10px;
            background-color: #ccc;
            border: 1px solid;
        }

        .itemTitle {
            text-align: center;
            padding: 3px;
            background-color: #bbb;
            border-bottom: 1px solid;
        }

        .itemItem {
            margin: 0 auto;
            width: 100%;
            height: 100%;
            padding: 2px;
        }

        /* Style the content */
        .content {
            background-color: #ddd;
            padding: 10px;
            height: 200px; /* Should be removed. Only for demonstration */
        }

        /* Style the footer */
        .footer {
            background-color: #f1f1f1;
            padding: 10px;
        }

        .addButton {
            float: right;
            display: block;
        }

            .addButton input {
                height: 30px;
                margin-top: 10px;
                margin-right: 10px;
            }
    </style>
</head>
<body>
    <div class="topnav">
        <div class="topnavContainer">
            <div>
                <label for="selectOption">Choose a Group:</label>

                <select id="selectOption">
                    <option value="volvo">Volvo</option>
                    <option value="saab">Saab</option>
                    <option value="mercedes">Mercedes</option>
                    <option value="audi">Audi</option>
                </select>
            </div>
        </div>

        <div class="addButton">
            <input type="text" id="groupInput" />

            <input type="button" value="Add a Group" id="addGroup">
        </div>
    </div>

    <div class="content">
        <div class="item">
            <div class="itemTitle">games</div>
            <div class="itemItem">diablo</div>
            <div class="itemItem">diablo</div>
        </div>
        <div class="item">
            hi2
        </div>

    </div>

    <div class="footer">
        <p>Footer</p>
    </div>
    <div class="container">
        <div class="row" style="margin-right: auto; margin-left: auto; ">
            &nbsp;

        </div>
        <div class="row" id="games">
            <div class="col-sm-4">
                Items
            </div>
            <div class="col-sm-4">
                Items
            </div>
            <div class="col-sm-4">
                Items
            </div>
        </div>
        <div class="row"><div class="col-md-12"><input type="button" value="Add Item" /></div></div>
        <div class="row">
            <div class="col-2">User</div>
            <div class="col-4"><input type="text" id="userInput" /></div>
        </div>
        <div class="row">
            <div class="col-2">Message</div>
            <div class="col-4"><input type="text" id="messageInput" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
</body>
</html>


